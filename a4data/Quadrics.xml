<?xml version="1.0"?>
<scene ambient="0.1 0.1 0.1 1.0">
  <!-- define camera,material,lights here -->
  <light name="myLight" color="1 1 1" from="-50 200 50" power="1.0" type="point" /><light
  	name="bluelight" color="0.3 0 1" from="50 100 50" type="point" power="3.0">
</light>
	<material name="red" diffuse="0.1 0.6 0.5" specular="0.8 0.8 0.8" hardness="32" />
  
  <!-- render configuration -->
  <render bgcolor="0 0.2 0.3" output="Quadric.png">
      <camera name="myCamera" from="200 200 30" to="0 0 30" up="0 0 1" fovy="45" width="512" height="512" />
  </render>
  

  <!-- scene objects --><quadric>
	<material ref="red"></material></quadric>
	<sphere center="0 0 -30" radius="10">
		<material ref="red"></material></sphere>

</scene>
